/* components/custom-card/custom-card.wxss */
.feed-item {
  width: 100%;
  padding: 30rpx 30rpx 20rpx;
  margin: 0 0 20rpx 0;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.feed-item-hover {
  background-color: #f9f9f9;
}

.hidden {
  display: none !important;
}

.feed-source {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.feed-source-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.feed-source-name {
  display: inline-block;
  font-size: 28rpx;
  color: #666;
}

.item-more {
  width: 40rpx;
  height: 40rpx;
}

.feed-content {
  padding: 10rpx 0;
}

.question {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 34rpx;
  font-weight: 600;
  line-height: 1.4;
  color: #333;
}

.answer-body {
  padding: 10rpx 0;
  border-radius: 5rpx;
}

.answer-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #444;
  margin-bottom: 30rpx;
  display: block;
}

.answer-actions {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 26rpx;
  color: #666;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
