.admin-dashboard-container {
  padding: 20rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 30rpx;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  text-align: left;
}

.header .title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.header .welcome-msg {
  font-size: 28rpx;
  color: #666;
}

/* Grid Menu Styles */
.grid-menu {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  padding: 20rpx 10rpx; /* 内边距 */
  margin-bottom: 30rpx;
}

.menu-item {
  width: calc(33.333% - 20rpx); /* 每行3个，减去gap */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 10rpx;
  margin: 10rpx; /* 项之间的间距 */
  box-sizing: border-box;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background-color: #f2f2f2;
}

.menu-icon {
  width: 80rpx;  /* 修改图标宽度 */
  height: 80rpx; /* 修改图标高度 */
  margin-bottom: 15rpx;
}

.menu-text {
  font-size: 26rpx;
  color: #555;
  text-align: center;
}

/* Quick Stats Section */
.quick-stats {
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.quick-stats .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.stats-item {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-item:last-child {
  border-bottom: none;
} 