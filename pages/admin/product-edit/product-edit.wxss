page {
  background-color: #f8f8f8;
}

.product-edit-container {
  padding-bottom: 140rpx; /* For form-actions */
}

.form-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 0 30rpx 10rpx;
}

.form-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
}
.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 220rpx; /* Fixed width for labels */
  color: #555;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.item-label.required::before {
  content: ''; /* Using border to create asterisk */
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  margin-right: 8rpx;
  vertical-align: middle;
}

.item-input,
.item-textarea {
  flex: 1;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  font-size: 28rpx;
}

.item-textarea {
  height: 120rpx;
  width: auto; /* Override default for textarea */
}
.item-textarea.long-desc {
  height: 200rpx;
}

.form-item.switch-item .item-label {
  flex-grow: 1;
}
.form-item.switch-item switch {
  transform: scale(0.8); /* Adjust switch size if needed */
}

/* Image Uploader */
.image-uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.image-uploader.multi-image {
  /* Styles for multiple image uploader if different */
}

.upload-btn,
.image-preview-item {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-btn {
  border: 1rpx dashed #ccc;
  font-size: 60rpx;
  color: #aaa;
  background-color: #f7f7f7;
}

.image-preview-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0,0,0,0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.form-actions button {
  flex: 1;
  margin: 0 10rpx;
}

.picker {
  flex: 1;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  font-size: 28rpx;
  display: flex; /* Ensure picker view takes up space */
  align-items: center; /* Vertically center text */
  min-height: calc(28rpx + 20rpx + 2rpx); /* Match input height: font-size + padding + border */
}

.picker-placeholder {
  color: #999; /* Standard placeholder color */
}

.picker-selected {
  color: #303133; /* Standard input text color */
} 