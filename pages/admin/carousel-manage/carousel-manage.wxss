.carousel-list-scroll {
  flex-grow: 1;
  height: calc(100% - 101rpx); /* Adjust if search input is present */
}

.carousel-item {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin: 20rpx 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  align-items: flex-start; /* Align items to the top */
}

.carousel-image {
  width: 200rpx; /* Wider for carousel preview */
  height: 100rpx; /* Adjust height保持比例 */
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #eee;
  object-fit: cover;
}

.carousel-info {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  min-width: 0;
}

.carousel-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.carousel-link,
.carousel-status,
.carousel-sort {
  display: block;
  font-size: 22rpx;
  margin-bottom: 4rpx;
  color: #777;
}

.carousel-status.active {
  color: #00b26a;
}

.carousel-status.inactive {
  color: #ff4d4f;
}

.carousel-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 15rpx;
}

.carousel-actions button {
  margin-top: 8rpx;
  font-size: 24rpx;
  padding: 5rpx 15rpx;
}
.carousel-actions button:first-child {
  margin-top: 0;
}

.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
} 