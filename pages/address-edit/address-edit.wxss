/* pages/address-edit/address-edit.wxss */
page {
  background-color: #f8f8f8;
  min-height: 100%;
}

.address-edit-container {
  display: flex;
  flex-direction: column;
  padding: 0 0 50rpx 0;
}

.form-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 90rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  flex: 1;
  height: 180rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  width: 100%;
}

.address-picker {
  display: flex;
  align-items: center;
}

.region-picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.region-picker.placeholder {
  color: #999;
}

.right-arrow {
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.submit-btn {
  width: 90%;
  margin: 40rpx auto;
  background: linear-gradient(135deg, #ff7e00, #ff5000);
  color: white;
  font-size: 32rpx;
  border-radius: 45rpx;
  height: 90rpx;
  line-height: 90rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 80, 0, 0.2);
}

.delete-btn {
  width: 90%;
  margin: 30rpx auto;
  background-color: #fff;
  color: #e64340;
  font-size: 32rpx;
  border: 1rpx solid #f5c6cb;
  border-radius: 45rpx;
  height: 90rpx;
  line-height: 90rpx;
}
