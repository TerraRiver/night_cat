.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* Tab Bar Styles */
.tab-bar {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #8cbdb6;
  border-radius: 3rpx;
}

.tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 8rpx;
}

.tab-item text {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active text {
  color: #8cbdb6;
  font-weight: 500;
}

/* Mode Content Styles */
.mode-content {
  flex: 1;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* Sleep Card (Normal Mode) */
.sleep-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.sleep-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.sleep-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.sleep-date {
  font-size: 24rpx;
  color: #999;
}

.sleep-score-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.sleep-score-circle {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  background: linear-gradient(135deg, #8cbdb6, #5a9992);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}

.sleep-score {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
}

.sleep-score-label {
  font-size: 28rpx;
  color: #666;
}

.sleep-details {
  margin-bottom: 30rpx;
  width: 100%;
}

.sleep-detail-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.sleep-detail-item:last-child {
  border-bottom: none;
}

.detail-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.detail-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.report-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #8cbdb6, #5a9992);
  color: #fff;
  font-size: 30rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(140, 189, 182, 0.2);
  margin-top: 20rpx;
}

/* Late Night Mode Styles */
.late-night-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  width: 100%;
  box-sizing: border-box;
}

.time-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.current-time {
  font-size: 100rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.screen-time {
  font-size: 26rpx;
  color: #999;
}

.checkin-section {
  margin-bottom: 30rpx;
  width: 100%;
}

.checkin-reminder {
  font-size: 30rpx;
  color: #ff9800;
  text-align: center;
  display: block;
  margin-bottom: 30rpx;
}

.checkin-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.checkin-btn {
  width: 48%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkin-btn.wakeup {
  background: linear-gradient(135deg, #ffca28, #ffa000);
  color: #333;
}

.checkin-btn.sleep {
  background: linear-gradient(135deg, #5c6bc0, #3949ab);
  color: #fff;
}

.checkin-records {
  background-color: #f9f9f9;
  border-radius: 15rpx;
  padding: 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.checkin-record {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.record-label {
  font-size: 28rpx;
  color: #666;
}

.record-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.ai-suggestion {
  background-color: #f3f8f7;
  border-radius: 15rpx;
  padding: 25rpx;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.ai-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.ai-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.ai-message {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.ai-actions {
  display: flex;
  justify-content: flex-end;
}

.ai-btn {
  margin-left: 20rpx;
  height: 70rpx;
  font-size: 26rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
}

.ai-btn.accept {
  background-color: #8cbdb6;
  color: #fff;
}

.ai-btn.reject {
  background-color: #f5f5f5;
  color: #666;
}

/* Recovery Mode Styles */
.recovery-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  width: 100%;
  box-sizing: border-box;
}

.recovery-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.recovery-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

.recovery-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.progress-section {
  margin-bottom: 30rpx;
  width: 100%;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.progress-label {
  font-size: 30rpx;
  color: #666;
}

.progress-value {
  font-size: 30rpx;
  color: #8cbdb6;
  font-weight: 500;
}

.progress-bar {
  margin-bottom: 15rpx;
  width: 100%;
}

.progress-message {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: block;
}

.checklist-section {
  margin-top: 20rpx;
  width: 100%;
}

.checklist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.checklist-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.checklist-counter {
  font-size: 26rpx;
  color: #8cbdb6;
  font-weight: 500;
}

.checklist {
  max-height: 700rpx;
  overflow-y: auto;
  width: 100%;
}

.checklist-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.checklist-item:last-child {
  border-bottom: none;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 6rpx;
  border: 2rpx solid #ddd;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox.checked {
  background-color: #8cbdb6;
  border-color: #8cbdb6;
}

.checkbox-inner {
  width: 28rpx;
  height: 18rpx;
  border: 3rpx solid #fff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
}

.checklist-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.checklist-item.checked .checklist-text {
  color: #999;
  text-decoration: line-through;
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #8cbdb6, #5a9992);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 6rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.question-container {
  padding: 20rpx 30rpx;
  max-height: 60vh;
}

.question-item {
  margin-bottom: 30rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.option-group {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.option-item text {
  font-size: 28rpx;
  color: #555;
  margin-left: 10rpx;
}

.modal-actions {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  width: 45%;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
}

.modal-btn.submit {
  background: linear-gradient(135deg, #8cbdb6, #5a9992);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(140, 189, 182, 0.3);
}

.modal-btn.later {
  background: #f5f5f5;
  color: #888;
}