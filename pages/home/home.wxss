/* Updated Recovery Mode Styles */
.recovery-header-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.recovery-header-title text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.mascot-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.mascot-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.recovery-status-card {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.recovery-status-card.low-progress {
  background-color: #FFF9EB;
}

.recovery-status-message {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.status-arrow {
  margin-left: 20rpx;
}

.progress-container {
  width: 100%;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.progress-bar {
  width: 100%;
}

.recovery-checklist {
  width: 100%;
}

.checklist-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.checklist-item:last-child {
  border-bottom: none;
}

.checkbox-container {
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checklist-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.checklist-item.checked .checklist-text {
  color: #8cbdb6;
  text-decoration: line-through;
}