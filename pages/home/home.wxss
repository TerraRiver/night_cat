.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8f9fa, #e6f7f4);
  box-sizing: border-box;
  max-width: 100vw;
}

/* 测试导航按钮 */
.test-nav-container {
  width: 100%;
  margin-bottom: 15rpx;
}

.test-nav-btn {
  background: linear-gradient(to right, #ff9800, #ffb74d);
  color: white;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

/* Mode Selector Styles */
.mode-selector {
  display: flex;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.07);
  overflow: hidden;
  flex-wrap: wrap;
}

.mode {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  transition: all 0.3s ease;
  position: relative;
}

.mode.active {
  background-color: rgba(140, 189, 182, 0.15);
  color: #8cbdb6;
  transform: translateY(-2rpx);
}

.mode.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  border-radius: 6rpx 6rpx 0 0;
}

.mode-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.mode text {
  font-size: 26rpx;
  font-weight: 500;
}

/* Mode Content Styles */
.mode-content {
  width: 100%;
  box-sizing: border-box;
  max-width: 100vw;
}

/* Chart Container Styles */
.chart-container {
  width: 100%;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  box-sizing: border-box;
  max-width: 100vw;
}
 
.picker-view {
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.8);
}

.picker-view text {
  margin-right: 12rpx;
  font-size: 30rpx;
  color: #444;
  font-weight: 500;
}

.down-arrow {
  width: 24rpx;
  height: 24rpx;
  max-width: 100%;
  height: auto;
  box-sizing: border-box;
}
 
.chart-image {
  width: 100%;
  padding: 24rpx;
  max-width: 100%;
  height: auto;
  box-sizing: border-box;
}

/* Data Card Styles */
.data-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  margin-bottom: 36rpx;
  box-sizing: border-box;
  max-width: 100vw;
}

.data-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.8);
  margin-bottom: 12rpx;
}

.data-title {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(to right, #333, #555);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.data-date {
  font-size: 24rpx;
  color: #999;
}
 
.data-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.6);
  flex-shrink: 1;
  flex-wrap: wrap;
  min-width: 0;
}
 
.data-item:last-child {
  border-bottom: none;
}

.data-icon-container {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
  background: rgba(140, 189, 182, 0.1);
  border-radius: 50%;
}

.data-icon {
  width: 40rpx;
  height: 40rpx;
  max-width: 100%;
  height: auto;
  box-sizing: border-box;
}
 
.label {
  flex: 1;
  color: #666;
  font-size: 28rpx;
  word-break: break-all;
  overflow-wrap: break-word;
}
 
.value {
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
  word-break: break-all;
  overflow-wrap: break-word;
}
 
.score {
  background: linear-gradient(to right, #07c160, #4cd080);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  word-break: break-all;
  overflow-wrap: break-word;
}
 
.report-btn {
  margin: 48rpx auto 10rpx auto;
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #fff;
  border: none;
  width: 90%;
  padding: 20rpx 0;
  transition: all 0.3s ease;
  max-width: 100%;
  box-sizing: border-box;
  white-space: normal;
  display: block;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(140, 189, 182, 0.3);
}

.report-btn:active {
  opacity: 0.85;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(140, 189, 182, 0.2);
}

/* Late Night Mode Styles */
.late-night-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  margin-bottom: 36rpx;
  box-sizing: border-box;
  max-width: 100vw;
}

.clock-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 36rpx;
  padding-bottom: 36rpx;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.8);
}

.current-time {
  font-size: 80rpx;
  font-weight: bold;
  background: linear-gradient(to right, #333, #666);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.screen-time {
  font-size: 28rpx;
  color: #888;
}

.check-in-container {
  width: 100%;
  padding: 20rpx 0;
}

.check-in-reminder {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #ff9800;
  margin-bottom: 20rpx;
}

.check-in-buttons {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}

.check-btn {
  width: 46% !important;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  text-align: center;
  border: none;
}

.check-btn.wake-up {
  background: linear-gradient(to right, #ffc107, #ffeb3b);
  color: #333;
}

.check-btn.sleep {
  background: linear-gradient(to right, #5c6bc0, #3f51b5);
  color: white;
}

.check-btn:active {
  transform: translateY(2rpx);
  opacity: 0.9;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.check-in-record {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: rgba(236, 240, 241, 0.5);
  border-radius: 16rpx;
}

.check-in-record text {
  font-size: 28rpx;
  color: #666;
  margin: 8rpx 0;
}

.ai-assistant {
  display: flex;
  padding: 20rpx;
  background: rgba(236, 240, 241, 0.5);
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.ai-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(to bottom right, #8cbdb6, #5a9992);
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-message {
  flex: 1;
}

.ai-message text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
}

.ai-actions {
  display: flex;
  margin-top: 16rpx;
}

.ai-action-btn {
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  background: #fff;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.ai-action-btn.accept {
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  color: white;
}

.ai-action-btn.reject {
  color: #666;
}

.ai-action-btn:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}

/* Recovery Mode Styles */
.recovery-header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.recovery-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.recovery-title {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.mascot-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(140, 189, 182, 0.3);
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1);
}

.recovery-progress-section {
  margin-top: 20rpx;
}

.progress-text-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #666;
}

.progress-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #8cbdb6;
}

.progress-bar {
  margin-bottom: 16rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.recovery-message {
  font-size: 26rpx;
  color: #888;
  text-align: center;
  display: block;
}

.recovery-checklist-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.checklist-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.checklist-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.checklist-subtitle {
  font-size: 26rpx;
  color: #888;
}

.recovery-checklist {
  margin-top: 10rpx;
}

.checklist-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.6);
  transition: all 0.3s ease;
}

.checklist-item:last-child {
  border-bottom: none;
}

.checklist-item.checked .checklist-text {
  color: #8cbdb6;
  text-decoration: line-through;
}

.checkbox-container {
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checklist-text {
  font-size: 28rpx;
  color: #555;
  flex: 1;
}

.checklist-item-hover {
  background-color: rgba(140, 189, 182, 0.05);
}

.recovery-recommendations-section {
  margin-top: 20rpx;
  width: 100%;
}

.recommendations-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.recommendation-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recommendation-item {
  width: 48%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 18rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.08);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.recommendation-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.recommendation-image {
  width: 100%;
  height: 180rpx;
  display: block;
}

.recommendation-title {
  font-size: 26rpx;
  color: #555;
  padding: 16rpx;
  display: block;
  text-align: center;
}

.recommendation-item-hover {
  background-color: rgba(140, 189, 182, 0.05);
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 6rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tutorial-container {
  width: 85%;
}

.question-container {
  padding: 20rpx 30rpx;
  max-height: 60vh;
}

.question-item {
  margin-bottom: 30rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.option-group {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.option-item text {
  font-size: 28rpx;
  color: #555;
  margin-left: 10rpx;
}

.modal-actions {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  width: 45%;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
  border: none;
  transition: all 0.3s ease;
}

.modal-btn.submit {
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(140, 189, 182, 0.3);
}

.modal-btn.later {
  background: #f5f5f5;
  color: #888;
}

.modal-btn.done {
  background: linear-gradient(to right, #8cbdb6, #5a9992);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(140, 189, 182, 0.3);
  margin: 20rpx 30rpx;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.tutorial-video {
  width: 100%;
  height: 320rpx;
}

.tutorial-description {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tutorial-description text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
}

.tutorial-steps {
  padding: 20rpx 30rpx;
}

.step-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.step-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.step-text {
  font-size: 28rpx;
  color: #555;
  flex: 1;
  line-height: 1.5;
}

