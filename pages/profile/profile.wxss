.container {
  padding: 20rpx;
}

page {
  background-color: #f8f8f8;
  height: 100%;
}

.profile-container {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #eee;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.feature-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.feature-list {
  padding: 10rpx 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 26rpx 30rpx;
  position: relative;
}

.feature-item:active {
  background-color: #f8f8f8;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.feature-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.arrow-right {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.6;
}

.feature-item.logout .feature-name {
  color: #e64340;
}

.action-buttons {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-button {
  width: 100%;
  max-width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1296db; /* 主题色 */
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(18, 150, 219, 0.2);
}

.profile-button:active {
  opacity: 0.9;
}

.logout-button {
  background-color: #e64340; /* 退出通常用红色系 */
  box-shadow: 0 4rpx 10rpx rgba(230, 67, 64, 0.2);
}

.admin-button {
  background-color: #ffc107; /* 一个不同的颜色，例如金色 */
  color: #333;
  box-shadow: 0 4rpx 10rpx rgba(255, 193, 7, 0.3);
} 