.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 50%; /* 如果是圆形logo */
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 80rpx;
  color: #333;
}

.login-prompt {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.login-button {
  width: 100%;
  max-width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1AAD19; /* 微信绿色 */
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  margin-top: 20rpx;
}

.login-button:active {
  background-color: #179B16;
}

.loading-text {
  font-size: 30rpx;
  color: #888;
}

.agreement {
  position: fixed;
  bottom: 50rpx; /* 距离底部一些距离 */
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.agreement checkbox-group {
  margin-right: 10rpx;
  transform: scale(0.8); /* 缩小checkbox */
}

.agreement .link {
  color: #1296db; /* 主题蓝色 */
  margin: 0 5rpx;
} 