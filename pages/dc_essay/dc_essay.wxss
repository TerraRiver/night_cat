/* pages/dc_essay/dc_essay.wxss */
page{
    background: #f5f7fa;
    padding: 0;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #8cbdb6;
  font-weight: 500;
}

.container{
  height: calc(100vh - 100rpx);
  padding: 0;
  font-size: 28rpx;
  background: #F5F7FA;
  color: #333;
}

.essay-list {
  padding: 20rpx;
}

.textimg{
  display: flex;
  flex-direction: column;
  height: 380rpx;
  margin: 20rpx 0;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  position: relative;
}

.img{
  width: 100%;
  height: 220rpx;
  object-fit: cover;
  transition: all 0.3s;
}

.essay-info {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.text_01 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.essay-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  flex: 1;
}

.essay-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.essay-author {
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.essay-views {
  color: #8cbdb6;
}

/* 无搜索结果样式 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-result-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.no-result-text {
  font-size: 28rpx;
  color: #999;
}
